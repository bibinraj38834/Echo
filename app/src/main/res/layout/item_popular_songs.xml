<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/popular_song_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/round_shape"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_genre4"
        android:contentDescription="@string/popular_songs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popular_song_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/popular_song_play"
        app:layout_constraintStart_toEndOf="@+id/popular_song_image"
        app:layout_constraintTop_toTopOf="@+id/popular_song_image"
        tools:text="Sherlock Holmes"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/popular_song_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/popular_song_name"
        app:layout_constraintStart_toStartOf="@+id/popular_song_name"
        app:layout_constraintTop_toBottomOf="@+id/popular_song_name"
        tools:text="10D Baker Street"
        android:textSize="12sp"/>
    <ImageView
        android:id="@+id/popular_song_play"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:src="@drawable/baseline_play_arrow_24"
        android:contentDescription="@string/popular_songs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>